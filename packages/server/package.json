{
  "name": "@engram/server",
  "version": "0.0.1",
  "description": "MCP Server for Engram - exposes memory tools to AI assistants",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "engram-server": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "start": "node dist/bin.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@engram/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": "20.x"
  }
}
